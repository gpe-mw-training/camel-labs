<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans.xsd
  	    http://camel.apache.org/schema/spring
  	      http://camel.apache.org/schema/spring/camel-spring.xsd">

  <camelContext xmlns="http://camel.apache.org/schema/spring">
    <routeBuilder ref="paymentsByReceiverAggregator"/>

    <endpoint id="sourceEndpoint" uri="file:///camel-exercises/cbr/in/xml"/>
    <endpoint id="sinkEndpoint" uri="file:///camel-exercises/cbr/out/xml"/>
  </camelContext>

  <bean id="paymentsByReceiverAggregator" class="com.redhat.gpe.training.camel.PaymentsByReceiverAggregator"/>

</beans>